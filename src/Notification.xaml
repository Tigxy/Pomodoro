<Window x:Class="Pomodoro.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d"
        Title="Notification" Height="80" Width="400"
        WindowStartupLocation="Manual" WindowStyle="None"
        FontFamily="Calibri"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ShowInTaskbar="False"
        Topmost="True"
        >
    <Grid Margin="10" MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" x:Name="img" MouseLeftButtonDown="Window_MouseLeftButtonDown"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Pomodoro" Padding="5" FontSize="15" FontWeight="Bold"/>
            <TextBlock Grid.Row="1" x:Name="msg" FontSize="12"/>
        </Grid>
    </Grid>
</Window>
